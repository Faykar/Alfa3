<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".home.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/shape_green_black_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Nama Lengkap"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvNama"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


            android:layout_marginTop="1dp"
            android:background="@drawable/shape_rectangle_white" />

        <TextView
            android:id="@+id/tv_nomor"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_nama"
            android:layout_marginLeft="30dp"


            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Nomor HP"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_nomor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_nomor"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_rectangle_white"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_nomor"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Password"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_password"

            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_rectangle_white"

            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_rectangle_white"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Simpan" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>